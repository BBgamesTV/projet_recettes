{% extends 'base.html.twig' %}

{% block title %}Toutes les recettes
{% endblock %}

{% block body %}
	<div
		class="container mx-auto px-4 py-8">

		{# Message Flash #}
		{% for message in app.flashes('success') %}
			<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
				<strong class="font-bold">Succès !</strong>
				<span class="block sm:inline">{{ message }}</span>
			</div>
		{% endfor %}

		<div class="flex justify-between items-center mb-6">
			<h1 class="text-3xl font-bold text-gray-800">Liste des Recettes</h1>
			<a href="{{ path('app_recette_new') }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition duration-300">
				Créer une nouvelle recette
			</a>
		</div>

		<div class="bg-white shadow-lg rounded-lg overflow-hidden">
			<table class="min-w-full leading-normal">
				<thead class="bg-gray-800 text-white">
					<tr>
						<th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
							Nom
						</th>
						<th class="px-5 py-3 border-b-2 border-gray-200 text-left text-xs font-semibold uppercase tracking-wider">
							Actions
						</th>
					</tr>
				</thead>
				<tbody>
					{% for recette in recettes %}
						<tr class="hover:bg-gray-100">
							<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
								<p class="text-gray-900 whitespace-no-wrap">{{ recette.nom }}</p>
							</td>
							<td class="px-5 py-5 border-b border-gray-200 bg-white text-sm space-x-2">
								<a href="{{ path('app_recette_show', {'id': recette.id}) }}" class="text-indigo-600 hover:text-indigo-900 font-semibold">Voir</a>
								<a href="{{ path('app_recette_edit', {'id': recette.id}) }}" class="text-yellow-600 hover:text-yellow-900 font-semibold">Modifier</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="2" class="px-5 py-5 border-b border-gray-200 bg-white text-sm text-center">Aucune recette trouvée.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
