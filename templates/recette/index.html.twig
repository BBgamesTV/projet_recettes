{% extends 'base.html.twig' %}

{% block title %}Liste des recettes
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Liste des recettes</h1>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}

		<a href="{{ path('app_recette_new') }}" class="btn btn-primary mb-3">Cr√©er une nouvelle recette</a>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for recette in recettes %}
					<tr>
						<td>{{ recette.id }}</td>
						<td>{{ recette.nom }}</td>
						<td>
							<a href="{{ path('app_recette_show', {'id': recette.id}) }}">show</a>
							<a href="{{ path('app_recette_edit', {'id': recette.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
