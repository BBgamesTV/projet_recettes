<form method="post" action="{{ path('app_recette_delete', {'id': recette.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette recette?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recette.id) }}">
	<button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg shadow-md transition duration-300">Supprimer</button>
</form>
