{% extends 'base.html.twig' %}

{% block title %}Lucky Numbers
{% endblock %}

{% block body %}
	<style>
		.number-box {
			display: inline-block;
			width: 60px;
			height: 60px;
			line-height: 60px;
			text-align: center;
			margin: 5px;
			font-size: 24px;
			color: white;
			border-radius: 8px;
		}
        .example-wrapper { 
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
