{% extends 'base.html.twig' %}

{% block title %}S'inscrire
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-lg">
			<div>
				<h1 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
					Cr√©ez votre compte
				</h1>
			</div>

			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 rounded-md" role="alert">
					<p>{{ flash_error }}</p>
				</div>
			{% endfor %}

			{{ form_start(registrationForm) }}

			{# Affiche les erreurs globales du formulaire #}
			{% if not registrationForm.vars.valid %}
				<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
					<strong class="font-bold">Erreur !</strong>
					<span class="block sm:inline">{{ form_errors(registrationForm) }}</span>
				</div>
			{% endif %}

			<div class="rounded-md shadow-sm -space-y-px">
				<div>
					{{ form_row(registrationForm.username, {
                    label: 'Nom d\'utilisateur',
                    attr: {
                        class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        placeholder: 'Nom d\'utilisateur'
                    },
                    label_attr: { class: 'sr-only' }
                }) }}
				</div>
				<div>
					{{ form_row(registrationForm.email, {
                    label: 'Adresse email',
                    attr: {
                        class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        placeholder: 'Adresse email'
                    },
                    label_attr: { class: 'sr-only' }
                }) }}
				</div>
				<div>
					{{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    attr: {
                        class: 'appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm',
                        placeholder: 'Mot de passe'
                    },
                    label_attr: { class: 'sr-only' }
                }) }}
				</div>
			</div>

			<div class="flex items-center justify-between mt-6">
				<div class="flex items-center">
					{{ form_widget(registrationForm.agreeTerms, {
                    attr: { class: 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded' }
                }) }}
					<label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 block text-sm text-gray-900">
						J'accepte les conditions
					</label>
				</div>
			</div>
			<div class="text-red-500 text-xs mt-1">
				{{ form_errors(registrationForm.agreeTerms) }}
			</div>


			<div>
				<button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mt-6">
					S'inscrire
				</button>
			</div>

			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
